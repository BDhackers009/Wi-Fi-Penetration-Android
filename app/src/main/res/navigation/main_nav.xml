<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/devicesFragment">

    <fragment
        android:id="@+id/terminalViewPagerFragment"
        android:name="com.johndeweydev.awps.views.terminalfragment.TerminalMainFragment"
        android:label="fragment_terminal_view_pager"
        tools:layout="@layout/fragment_terminal_main" >
        <argument
            android:name="terminalArgs"
            app:argType="com.johndeweydev.awps.views.terminalfragment.TerminalArgs" />
    </fragment>

    <fragment
        android:id="@+id/devicesFragment"
        android:name="com.johndeweydev.awps.views.devicesfragment.DevicesFragment"
        android:label="fragment_devices"
        tools:layout="@layout/fragment_devices" >
        <action
            android:id="@+id/action_devicesFragment_to_terminalFragment"
            app:destination="@id/terminalViewPagerFragment" />
    </fragment>
</navigation>